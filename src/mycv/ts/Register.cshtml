
@{
    Layout = null;
}

<div class="row">
    <h2 class="col-sm-12 col-md-4 col-md-offset-3">Register</h2>
    <br />
        <div class="col-md-12">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
            <h3 class="subtitle text-center">We are here to assist you.</h3>
            <br />
            <p id="loggedin" class="alert alert-warning">You are currently logged in.</p>
            <p id="success" class="alert alert-success">Success! You are registered. <a href="#!" ui-sref="app.login">Click here</a> to login.</p>
            <p id="bigerror" class="alert alert-danger">The was an error.</p>
            <p id="info" class="alert alert-info">Already have a login? To login <a href="#!" ui-sref="app.login">click here.</a></p>
            <form id="cform" onsubmit="return false;" novalidate>
                <div class="form-group-lg">
                    <input type="text" id="email" class="form-control" placeholder="Your E-mail Adress" />
                    <div id="valemail" class="text-danger"></div>
                </div>
                <br />
                <div class="form-group-lg">
                    <input type="password" id="password" class="form-control" placeholder="Password" />
                    <div id="valpassword" class="text-danger"></div><small  class="form-text text-muted">
                        Note: Password must contain a capital letter, a special character and a digit. Password length must be minimum 8 characters.
                      </small>
                </div>
                <br />
                <div class="form-group-lg">
                    <input type="password" id="repassword" class="form-control" placeholder="Re-type Password" />
                    <div id="valrepassword" class="text-danger"></div>
                </div>
                <br />
                <div class="form-group-lg">
                    <input type="text" id="phone" class="form-control" placeholder="Your Phone Number" required />
                    <div id="valphone" class="text-danger"></div>
                </div>
                <br />
                <div class="form-group-lg">
                    <div class="pull-left">
                        <input type="submit" id="submitregister" class="btn btn-primary btn-lg" value="Register" />
                    </div>
                    <div class="pull-right">
                        <input type="reset" id="clear" class="btn btn-primary btn-lg" value="Clear" />
                    </div>
                </div>
            </form>
            <br />
        </div>
    </div>
</div>   
@Html.Partial("_APIClassesExtras") 
